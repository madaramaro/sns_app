<div class="search-container">
  <%= form_with url: topics_path, class: "form", method: :get, local: true do |form| %>
    <input class="input" type="text" name="body" placeholder="本文で検索" value="<%= params[:body] %>">
    <%= form.submit "検索", class: "button" %>
  <% end %>
</div>

<div class="post-list">
  <% @topics.each do |topic| %>
    <div class="post">
      <div class="header">
        <h2 class="title">Topic</h2>
        <p class="timestamp"><%= topic.created_at.strftime("%B %d, %Y") %></p>
      </div>
      <div class="body">
        <p class="content"><%= topic.body %></p>
      </div>
    </div>
  <% end %>
</div>

